{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "defaultValue": "ashuser",
            "type": "string"
        },
        "adminPassword": {
            "defaultValue": "Ashpassword123",
            "type": "string"
        },
        "osDiskSizeGB": {
            "defaultValue": 127,
            "type": "int"
        },
        "storagePerformance": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Premium_LRS"
            ]
        },
        "vmCount": {
            "type": "int",
            "defaultValue": 3,
            "allowedValues": [
                1,
                2,
                3,
                4,
                5
            ]
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "suffix": "[substring(uniqueString(resourceGroup().id),0,5)]",
        "vnetName": "virtual-network",
        "avsetName": "availability-set",
        "lbName": "load-balancer",
        "lbId": "[resourceId('Microsoft.Network/loadBalancers', variables('lbName'))]",
        "lbPipName": "lb-public-ip-address",
        "lbPipDns": "[concat('app-iis-',variables('suffix'))]",
        "vmName": "virtual-machine",
        "vmSize": "Standard_A2",
        "nicName": "network-interface",
        "vmcount": "[parameters('vmCount')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vnetName')]",
            "apiVersion": "2017-06-01",
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "copy": [
                    {
                        "name": "subnets",
                        "count": "[variables('vmcount')]",
                        "input": {
                            "name": "[concat('subnet-', copyIndex('subnets'))]",
                            "properties": {
                                "addressPrefix": "[concat('10.0.',copyIndex('subnets'),'.0/24')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/availabilitySets",
            "sku": {
                "name": "Aligned"
            },
            "name": "[variables('avsetName')]",
            "apiVersion": "2017-03-30",
            "location": "[variables('location')]",
            "properties": {
                "platformUpdateDomainCount": 5,
                "platformFaultDomainCount": 2
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('lbPipName')]",
            "apiVersion": "2017-06-01",
            "location": "[variables('location')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4,
                "dnsSettings": {
                    "domainNameLabel": "[variables('lbPipDns')]"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/loadBalancers",
            "name": "[variables('lbName')]",
            "apiVersion": "2017-06-01",
            "location": "[variables('location')]",
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('lbPipName'))]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "bkpool"
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "http",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat(variables('lbId'),'/frontendIPConfigurations/LoadBalancerFrontEnd')]"
                            },
                            "frontendPort": 80,
                            "backendPort": 80,
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 4,
                            "protocol": "Tcp",
                            "backendAddressPool": {
                                "id": "[concat(variables('lbId'),'/backendAddressPools/dtr-bkpool')]"
                            },
                            "probe": {
                                "id": "[concat(variables('lbId'),'/probes/http-hlt')]"
                            }
                        }
                    }
                ],
                "probes": [
                    {
                        "name": "http-hlt",
                        "properties": {
                            "protocol": "Tcp",
                            "port": 80,
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ],
                "copy": [
                    {
                        "name": "inboundNatRules",
                        "count": "[variables('vmcount')]",
                        "input": {
                            "name": "[concat('rdp', copyIndex('inboundNatRules'))]",
                            "properties": {
                                "frontendIPConfiguration": {
                                    "id": "[concat(variables('lbId'),'/frontendIPConfigurations/LoadBalancerFrontEnd')]"
                                },
                                "frontendPort": "[concat('4000',copyIndex('inboundNatRules'))]",
                                "backendPort": 3389,
                                "idleTimeoutInMinutes": 4,
                                "protocol": "Tcp"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('lbPipName'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(variables('nicName'),copyIndex())]",
            "apiVersion": "2017-06-01",
            "location": "[variables('location')]",
            "copy": {
                "name": "loop",
                "count": "[variables('vmcount')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat('ipconfig',copyIndex())]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks',variables('vnetName')),'/subnets/subnet-',copyIndex())]"
                            },
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('lbName')), '/backendAddressPools/bkpool')]"
                                }
                            ],
                            "loadBalancerInboundNatRules": [
                                {
                                    "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('lbName')), '/inboundNatRules/ssh',copyIndex())]"
                                }
                            ]
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
                "[resourceId('Microsoft.Network/loadBalancers', variables('lbname'))]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(variables('vmName'),copyIndex())]",
            "apiVersion": "2017-03-30",
            "location": "[variables('location')]",
            "copy": {
                "name": "loop",
                "count": "[variables('vmcount')]"
            },
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('avsetName'))]"
                },
                "hardwareProfile": {
                    "vmSize": "[variables('vmsize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2012-R2-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[concat(variables('vmName'),copyIndex(),'_OsDisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "[parameters('storagePerformance')]"
                        },
                        "diskSizeGB": "[parameters('osDiskSizeGB')]"
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[concat(variables('vmName'),copyIndex())]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": true
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('nicName'),copyIndex()))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Compute/availabilitySets', variables('avsetName'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('nicName'),copyIndex()))]"
            ]
        }
    ],
    "outputs": {
        "appUrlFqdn": {
            "type": "string",
            "value": "[reference(variables('lbPipName')).dnsSettings.fqdn]"
        }
    }
}